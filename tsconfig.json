{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "declaration": true,
    "sourceMap": false,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": ["./src/**/*.ts", "src/**/*.json",
    "./src/types/status.ts"
  ],
  "exclude": ["./src/tests", "./node_modules", "./src/types"]
}
