{
  "name": "user-role-permission-app",
  "version": "0.0.0",
  "description": "TypeScript + Mongoose + MongoDB + Express API Server",
  "author": "",
  "license": "ISC",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts --watch",
    "build": "tsc -p tsconfig.json",
    "test": "jest --forceExit --detectOpenHandles",
    "start": "npm run build && node dist/server.js"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePattern": [
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    }
  },
  "nodemonConfig": {
    "watch": [
      "src",
      ".env"
    ],
    "ext": "js,ts,json",
    "ignore": [
      "src/**/*.spec.ts",
      "src/**/*.test.ts"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.0.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/compression": "^1.7.1",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/hpp": "^0.2.2",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/morgan": "^1.9.3",
    "@types/supertest": "^2.0.11",
    "jest": "^27.0.6",
    "nodemon": "^2.0.9",
    "supertest": "^6.1.3",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "tslib": "^2.3.1",
    "typescript": "^4.3.5"
  }
}
